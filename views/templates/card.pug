div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen casa ${propiedad.titulo}`)
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold line-clamp-1")= propiedad.titulo
        p(class="text-sm text-gray-600 line-clamp-1") Habitaciones: 
            span(class="text-gray-800 font-bold")= propiedad.habitaciones

        p(class="text-sm text-gray-600 line-clamp-1") WC: 
            span(class="text-gray-800 font-bold")= propiedad.wc

        p(class="text-sm text-gray-600 line-clamp-1") Precio: 
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre

        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded-lg") Ver Propiedad